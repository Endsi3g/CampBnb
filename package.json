{
  "name": "campbnb-backend",
  "version": "1.0.0",
  "description": "Backend pour Campbnb Québec - Plateforme de réservation de campings",
  "main": "index.js",
  "scripts": {
    "dev": "supabase start",
    "migrate": "supabase db push",
    "migrate:create": "supabase migration new",
    "functions:deploy": "supabase functions deploy",
    "functions:deploy:all": "supabase functions deploy --all",
    "functions:deploy:listings": "supabase functions deploy listings",
    "functions:deploy:reservations": "supabase functions deploy reservations",
    "functions:deploy:profiles": "supabase functions deploy profiles",
    "functions:deploy:messages": "supabase functions deploy messages",
    "functions:deploy:reviews": "supabase functions deploy reviews",
    "functions:deploy:favorites": "supabase functions deploy favorites",
    "functions:deploy:activities": "supabase functions deploy activities",
    "functions:deploy:mapbox": "supabase functions deploy mapbox",
    "functions:deploy:gemini": "supabase functions deploy gemini",
    "functions:deploy:analytics": "supabase functions deploy analytics",
    "functions:deploy:payments": "supabase functions deploy payments",
    "storage:setup": "supabase storage create listing-images profile-avatars activity-images",
    "deploy": "bash scripts/deploy.sh",
    "deploy:windows": "powershell -ExecutionPolicy Bypass -File scripts/deploy.ps1",
    "env:create": "node -e \"const fs=require('fs');const path=require('path');const envPath=path.join(process.cwd(),'.env');if(!fs.existsSync(envPath)){const template='SUPABASE_URL=\\nSUPABASE_KEY=\\nMAPBOX_ACCESS_TOKEN=\\nGEMINI_API_KEY=\\nSENTRY_DSN=\\n';fs.writeFileSync(envPath,template);console.log('✅ Fichier .env créé avec le template. Veuillez remplir les valeurs.');}else{console.log('⚠️  Le fichier .env existe déjà.');}\"",
    "env:create:windows": "powershell -ExecutionPolicy Bypass -File scripts/create_env.ps1",
    "test": "echo \"Tests à implémenter\" && exit 0",
    "lint": "echo \"Linter à configurer\" && exit 0",
    "build": "echo \"Build à configurer\" && exit 0"
  },
  "keywords": [
    "camping",
    "reservation",
    "supabase",
    "postgresql",
    "api"
  ],
  "author": "Campbnb Québec",
  "license": "PROPRIETARY",
