<?xml version="1.0" encoding="utf-8"?>
<!-- Configuration de sécurité réseau pour Android -->
<!-- Force l'utilisation de HTTPS uniquement -->
<network-security-config>
    <!-- Configuration pour le domaine de production -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">campbnb.quebec</domain>
        <domain includeSubdomains="true">supabase.co</domain>
        <domain includeSubdomains="true">stripe.com</domain>
        <domain includeSubdomains="true">mapbox.com</domain>
        <trust-anchors>
            <!-- Trust system certificates -->
            <certificates src="system" />
            <!-- Trust user added CAs while debuggable only -->
            <certificates src="user" />
        </trust-anchors>
    </domain-config>

    <!-- Configuration par défaut : HTTPS uniquement -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>

    <!-- Configuration pour le mode debug (développement uniquement) -->
    <debug-overrides>
        <trust-anchors>
            <certificates src="system" />
            <certificates src="user" />
        </trust-anchors>
    </debug-overrides>
</network-security-config>

